{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://aether.eha.org/job.json",
  "type": "object",
  "title": "REST Consumer Job",
  "required": [
    "id",
    "owner",
    "type",
    "topic",
    "datamap",
    "url"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The ID of this Job",
      "default": "",
      "examples": [
        "an_id"
      ],
      "pattern": "^(.*)$"
    },
    "owner": {
      "$id": "#/properties/owner",
      "type": "string",
      "title": "Who Owns this Job",
      "default": "",
      "examples": [
        "the owner"
      ],
      "pattern": "^(.*)$"
    },
    "type": {
      "$id": "#/properties/type",
      "type": "string",
      "title": "The REST Type of this job",
      "enum": [ "HEAD", "GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    "topic": {
      "$id": "#/properties/topic",
      "type": "array",
      "title": "Kafka Topics to Monitor",
      "items": {
        "$id": "#/properties/topic/items",
        "type": "string",
        "title": "Individual topics",
        "default": "",
        "examples": [
          "topic1",
          "topic2"
        ],
        "pattern": "^(.*)$"
      }
    },
    "datamap": {
      "$id": "#/properties/datamap",
      "type": "object",
      "title": "The Datamap to pull from messages",
      "patternProperties": {
        "^.*$": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "url": {
      "$id": "#/properties/url",
      "type": "string",
      "title": "The URL to use for this job, with optional query parameters",
      "default": "",
      "examples": [
        "http://example.com/api/v1/{id}/"
      ],
      "pattern": "^(.*)$"
    },
    "query_params": {
      "$id": "#/properties/query_params",
      "type": "array",
      "title": "Query Parameters for a GET string",
      "items": {
        "$id": "#/properties/query_params/items",
        "type": "string",
        "title": "The Items Schema",
        "default": "",
        "examples": [
          "key1",
          "key2"
        ],
        "pattern": "^(.*)$"
      }
    },
    "json_body": {
      "$id": "#/properties/json_body",
      "type": "array",
      "title": "The Json_body Schema",
      "items": {
        "$id": "#/properties/json_body/items",
        "type": "string",
        "title": "The Items Schema",
        "default": "",
        "examples": [
          "key1",
          "key2"
        ],
        "pattern": "^(.*)$"
      }
    },
    "basic_auth": {
      "$id": "#/properties/basic_auth",
      "type": "object",
      "title": "The Basic_auth Schema",
      "required": [
        "user",
        "password"
      ],
      "properties": {
        "user": {
          "$id": "#/properties/basic_auth/properties/user",
          "type": "string",
          "title": "The User Schema",
          "default": "",
          "examples": [
            "uname"
          ],
          "pattern": "^(.*)$"
        },
        "password": {
          "$id": "#/properties/basic_auth/properties/password",
          "type": "string",
          "title": "The Password Schema",
          "default": "",
          "examples": [
            "apassword"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "token": {
      "$id": "#/properties/token",
      "type": "string",
      "title": "The Token Schema",
      "default": "",
      "examples": [
        "mylongtoken"
      ],
      "pattern": "^(.*)$"
    }
  }
}